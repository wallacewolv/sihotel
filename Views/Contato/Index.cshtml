@{
    ViewData["Title"] = "Contato";
}

<main class="main-contato">
    <h1><img src="imagens/mensagem.png">Formulário de Contato</h1>
    <h2>Nos deixe uma mensagem!</h2>
    <form  method="POST" class="form">

        <label for="name">Nome</label>
        <input type="text" name="name" id="name" required />

        <label for="email">E-mail</label>
        <input type="email" name="email" id="email" required />

        <label for="message" class="txt-msg">Mensagem</label>
        <textarea name="message" id="message" required></textarea>

        <button onclick="Alert()" type="submit">Enviar</button>
    </form>
</main>

<script>
function Alert() {
    alert("Agradecemos pela mensagem!");
}
</script>